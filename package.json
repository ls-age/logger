{
  "name": "@lsage/logger",
  "version": "0.1.0",
  "description": "Logging made easy",
  "main": "out/index.js",
  "scripts": {
    "compile": "babel src -d out",
    "compile:watch": "npm run compile -- --watch",
    "docs": "esdoc -c esdoc.json",
    "lint": "eslint src",
    "prepublish": "npm run compile && npm run docs",
    "test": "mocha --recursive --require babel-register \"test/src/**/*.spec.js\"",
    "test:watch": "npm test -- --watch --reporter min",
    "test:coverage": "NODE_ENV=test nyc --reporter=html npm test",
    "test:docs": "blcl docs/api --exclude https://circleci.com/gh/atSCM/atscm"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ls-age/logger.git"
  },
  "keywords": [
    "nodejs",
    "logging"
  ],
  "author": "Lukas Hechenberger <npm@ls-age.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ls-age/logger/issues"
  },
  "homepage": "https://github.com/ls-age/logger#readme",
  "devDependencies": {
    "babel-cli": "^6.23.0",
    "babel-plugin-istanbul": "^4.0.0",
    "babel-preset-node6": "^11.0.0",
    "broken-link-checker-local": "^0.1.1",
    "esdoc": "^0.5.2",
    "esdoc-plugin-require-coverage": "^0.1.2",
    "eslint": "^3.17.1",
    "eslint-config-lsage": "^0.1.0",
    "mocha": "^3.2.0",
    "nyc": "^10.1.2",
    "sinon": "^1.17.7",
    "unexpected": "^10.26.3"
  },
  "dependencies": {
    "chalk": "^1.1.3",
    "left-pad": "^1.1.3",
    "tildify": "^1.2.0"
  },
  "babel": {
    "presets": [
      "node6"
    ],
    "env": {
      "test": {
        "plugins": [
          "istanbul"
        ]
      }
    }
  },
  "eslintConfig": {
    "extends": "lsage"
  },
  "nyc": {
    "all": true,
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "res/**/*.*"
    ],
    "require": [
      "babel-register"
    ],
    "sourceMap": false,
    "instrument": false,
    "check-coverage": true
  }
}
